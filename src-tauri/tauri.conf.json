{
  "productName": "BloatSQL",
  "identifier": "com.bloatsql.app",
  "build": {
    "beforeDevCommand": "npm run dev:vite",
    "beforeBuildCommand": "vite build",
    "devUrl": "http://localhost:5174",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": []
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "BloatSQL",
        "width": 1400,
        "height": 900,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}